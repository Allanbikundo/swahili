{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "swahili",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numerical values"
		},
		{
			"include": "#Functions"
		},
		{
			"include": "#single line comments"
		},
		{
			"include": "#Multi-line comments"
		},
		{
			"include": "#Flow Control"
		},
		{
			"include": "#Function Names"
		},
		{
			"include": "#Identifier"
		},
		{
			"include": "#Function Call"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.swahili",
				"match": "\\b(wacha|shughuli|kweli|uwongo)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.swahili",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.swahili",
					"match": "\\\\."
				}
			]
		},
		"numerical values":{
			"patterns": [{
				"name": "constant.numeric.swahili",
				"match": "\\d+(.\\d+)?"
			}]
		},
		"single line comments": {
			"patterns": [{
				"name": "comment.line.swahili",
				"match": "\/\/.+"
			}]
		},
		"Multi-line comments": {
			"name": "comment.block.swahili",
			"begin": "\/\\*",
			"end": "\\*\/",
			"patterns": [
				{
					"name": "comment.block.swahili",
					"match": "\\\\."
				}
			]
		},
		"Functions": {
			"patterns": [
				{
					"name": "entity.name.function.swahili",
					"match": "\\b(shughuli|tupu|niNambari|soma|andika|somaNambari|futa|niShughuli|idadi|niNambari|niJina|niOrodha|Nambari|niTupu )\\b"
				}
			]
		},
		"Flow Control":{
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\b(kama|au|sivyo|kwa|ambapo|mpaka|rudisha|ondoka|endelea)\\b"
				}
			]
		},
		"Identifier":{
			"patterns": [
				{
					"name": "variable.name.swahili",
					"match": "[a-zA-Z_]{1}w+"
				}
			]
		},
		"Function Call":{
			"patterns": [
				{
					"name": "entity.name.function.swahili",
					"match": "[a-zA-Z_][a-zA-Z_0-9]*(?=\\()"
				}
			]
		}


	},
	"scopeName": "source.swh"
}